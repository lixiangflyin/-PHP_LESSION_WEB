<?php

var_dump(memory_get_usage());					//int(123872)

//以传值的方式传递一个大数组参数(函数里不修改这个参数)
function output($big_array)
{
	var_dump(memory_get_usage());					//int(5448464)
}


$big_array = array_fill(0, 100000, 'blank');

var_dump(memory_get_usage());					//int(5448416)

output($big_array);

